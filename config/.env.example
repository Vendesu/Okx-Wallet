# Telegram Bot Configuration
TELEGRAM_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# OKX Wallet Configuration (Blockchain)
OKX_WALLET_PRIVATE_KEY=your_okx_wallet_private_key_here
OKX_WALLET_ADDRESS=your_okx_wallet_address_here
OKX_NETWORK=ethereum  # ethereum, polygon, bsc, arbitrum, optimism

# Hyperliquid Configuration
HYPERLIQUID_PRIVATE_KEY=your_hyperliquid_private_key_here

# Market Data Source
MARKET_DATA_SOURCE=coingecko  # coingecko, binance

# Trading Mode & Symbol Selection
TRADING_MODE=auto  # auto, manual, trending, high_volume
TRADING_PAIRS=  # Leave empty for auto mode, or specify: BTC/USDT,ETH/USDT,SOL/USDT

# Auto Trading Configuration
AUTO_SYMBOL_LIMIT=50  # Max symbols untuk auto mode
MIN_VOLUME_USD=1000000  # Min volume untuk auto selection ($1M)
TRENDING_SYMBOL_LIMIT=20  # Trending symbols limit

# Symbol Filtering
EXCLUDED_SYMBOLS=USDT/USDT,USDC/USDT  # Symbols yang di-exclude
INCLUDED_CATEGORIES=all  # all, defi, gaming, layer1, memecoin

# Trading Configuration
INITIAL_BALANCE=1000
MAX_POSITION_SIZE=0.1

# Money Management Configuration
MONEY_MANAGEMENT_ENABLED=true  # Enable/disable money management

# Risk Per Trade
RISK_PER_TRADE_PERCENTAGE=2.0  # 2% risk per trade
MAX_RISK_PER_TRADE_USD=20  # Max $20 risk per trade
MIN_RISK_PER_TRADE_USD=5   # Min $5 risk per trade

# Position Sizing
POSITION_SIZING_METHOD=kelly  # kelly, fixed, percentage, martingale, volatility_adjusted
FIXED_POSITION_SIZE_USD=50  # Fixed $50 per trade
PERCENTAGE_POSITION_SIZE=5.0  # 5% of balance per trade
KELLY_FRACTION=0.25  # 25% of Kelly Criterion

# Portfolio Management
MAX_PORTFOLIO_RISK_PERCENTAGE=10.0  # Max 10% portfolio risk
MAX_CORRELATED_POSITIONS=3  # Max 3 correlated positions
MAX_SECTOR_EXPOSURE=30.0  # Max 30% per sector

# Stop Loss & Take Profit
STOP_LOSS_PERCENTAGE=2.0
TAKE_PROFIT_PERCENTAGE=5.0
TRAILING_STOP_ENABLED=true  # Enable trailing stop
TRAILING_STOP_PERCENTAGE=1.0  # 1% trailing stop
BREAK_EVEN_ENABLED=true  # Move stop loss to break even
BREAK_EVEN_PERCENTAGE=1.5  # Move stop loss at 1.5% profit

# Risk Management
MAX_DAILY_TRADES=10
MAX_DAILY_LOSS=50
MAX_WEEKLY_LOSS=200
MAX_MONTHLY_LOSS=500
COOLDOWN_PERIOD=300  # 5 menit dalam detik

# Drawdown Protection
MAX_DRAWDOWN_PERCENTAGE=15.0  # Max 15% drawdown
DRAWDOWN_COOLDOWN_HOURS=24  # 24 jam cooldown after max drawdown

# Profit Taking
PROFIT_TAKING_ENABLED=true  # Enable profit taking
PROFIT_TAKING_PERCENTAGE=20.0  # Take 20% profit at target
SCALING_OUT_ENABLED=true  # Enable scaling out
SCALING_OUT_LEVELS=25,50,75  # Scale out at 25%, 50%, 75%

# Volatility Management
VOLATILITY_ADJUSTMENT_ENABLED=true  # Adjust position size for volatility
HIGH_VOLATILITY_THRESHOLD=50.0  # 50% volatility threshold
LOW_VOLATILITY_THRESHOLD=10.0   # 10% volatility threshold

# Market Condition Filters
MARKET_CONDITION_FILTERS=true  # Adjust risk based on market condition
BEAR_MARKET_RISK_REDUCTION=0.5  # Reduce risk by 50% in bear market
BULL_MARKET_RISK_INCREASE=1.2   # Increase risk by 20% in bull market

# Strategy Configuration
RSI_PERIOD=14
RSI_OVERBOUGHT=70
RSI_OVERSOLD=30
MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9